{
    "description": "AlaiDocs 整合下载分类系统 — 模板配置 (入Git)",
    "version": "2.0.0",
    "_comment": "所有路径均为相对路径(基于项目根目录)。用户可创建 alaidocs_config.json 覆盖。",
    
    "paths": {
        "download_dir": "data/downloads",
        "classified_dir": "data/classified",
        "kb_dir": "data/kb",
        "pack_output": "data/packed",
        "keywords_db": "data/keywords.json",
        "comment": "全部为相对路径; 也可在 alaidocs_config.json 中使用绝对路径覆盖"
    },
    
    "downloader": {
        "chatgpt_headless": true,
        "keywords_per_round": 10,
        "results_per_keyword": 20,
        "max_downloads_per_keyword": 20,
        "max_rounds": 0,
        "min_files_per_round": 3,
        "round_interval": 10,
        "keyword_reuse_days": 7,
        "total_size_limit_gb": 100,
        "total_files_limit": 10000,
        "headless": true,
        "focus_areas": [
            "ISO 7637 transient immunity",
            "automotive EMC EMI",
            "transient voltage suppressor TVS",
            "ESD protection automotive",
            "EMI filter design",
            "automotive reliability test",
            "bidirectional buck-boost converter EMC",
            "AEC-Q100 qualification",
            "load dump protection",
            "conducted emission radiated emission"
        ],
        "domain_whitelist": [
            "ti.com",
            "st.com",
            "analog.com",
            "infineon.com",
            "onsemi.com",
            "renesas.com",
            "microchip.com",
            "nxp.com",
            "vishay.com",
            "littelfuse.com",
            "bourns.com",
            "nexperia.com",
            "murata.com",
            "tdk.com",
            "würth.com",
            "kemet.com",
            "rohde-schwarz.com",
            "keysight.com",
            "iso.org",
            "sae.org"
        ]
    },
    
    "classifier": {
        "head_pages": 3,
        "min_stable_seconds": 15,
        "scan_interval": 30,
        "workers": 16,
        "comment": "head_pages: 提取PDF前N页进行分类; min_stable_seconds: 文件稳定检测时间; workers: 并发处理线程数（推荐12-16，PDF解析受GIL限制实际加速2-3x）"
    },
    
    "integration": {
        "classify_after_download": true,
        "classify_interval": 60,
        "update_kb_after_classify": true,
        "kb_update_interval": 1,
        "kb_workers": 4,
        "comment": "update_kb_after_classify: 分类后自动更新知识库; kb_update_interval: 每N轮更新一次; kb_workers: 知识库并行处理数"
    }
}
